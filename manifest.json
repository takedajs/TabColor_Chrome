{
  "name": "TabColor",
  "description": "If URL matches the keyword you specified, the left end of the browser will be displayed in red. You can register multiple keywords.",
  "version": "1.1",
  "manifest_version": 3,
  "homepage_url": "https://github.com/takedajs/TabColor_Chrome",
  "icons": {
    "16": "icons/tab_color_16.png",
    "48": "icons/tab_color_48.png",
    "128": "icons/tab_color_128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "action": {
    "default_icon": "icons/tab_color_128.png",
    "default_title": "TabColor",
    "default_popup": "popup/keyword_save.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
